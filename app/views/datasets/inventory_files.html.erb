<div class='upload-container card-design'>
  <h2>All Inventory Records</h2>
  <div class='scroll'>   
    <table >
      <thead>
        <tr>
          <th>Shipment</th>
          <th>Date Received</th>
          <th>Type</th>
          <th>State Code</th>
          <th>Rider No</th>
          <th>Coverage Date-From</th>
          <th>Coverage Date-to</th>
          <th>Volume</th>
          <th>Index Unit</th>
          <th>Index Date</th>
          <th>Blank Party-Unit</th>
          <th>Blank Party-Date</th>
          <th>Collateral-unit</th>
          <th>Collateral-date</th>
          <th>Special-Unit</th>
          <th>Special-Date</th>
          <th>Tax Lien-Unit</th>
          <th>Tax Lien-Date</th>
          <th>Frame Scanned-Unit</th>
          <th>Frame Scanned-Date</th>
          <th>MDB-Unit</th>
          <th>MDB-Date</th>
          <th>Office Product-Unit</th>
          <th>Office Product-Date</th>
          <th>TAT-Index</th>
          <th>TAT-Blank Party</th>
          <th>TAT-Collateral</th>
          <th>TAT-Special</th>
          <th>TAT-Tax Lien</th>
          <th>TAT-MDB</th>
          <th>TAT-Office Product</th>
        </tr>
      </thead>
      <tbody>
        <% @inventories.each do |inventory| %>
          <tr>
            <td><%= inventory['shipment'] %></td>
            <td><%= inventory['date_received'] %></td>
            <td><%= inventory['type'] %></td>
            <td><%= inventory['state_code'] %></td>
            <td><%= inventory['rider_no'] %></td>
            <td><%= inventory['coverage_date_from'] %></td>
            <td><%= inventory['coverage_date_to'] %></td>
            <td><%= inventory['volume'] %></td>
            <td><%= inventory['index_unit'] %></td>
            <td><%= inventory['index_date'] %></td>
            <td><%= inventory['blank_party_unit'] %></td>
            <td><%= inventory['blank_party_date'] %></td>
            <td><%= inventory['collateral_unit'] %></td>
            <td><%= inventory['collateral_date'] %></td>
            <td><%= inventory['special_unit'] %></td>
            <td><%= inventory['special_date'] %></td>
            <td><%= inventory['tax_lien_unit'] %></td>
            <td><%= inventory['tax_lien_date'] %></td>
            <td><%= inventory['frame_scanned_unit'] %></td>
            <td><%= inventory['frame_scanned_date'] %></td>
            <td><%= inventory['mdb_unit'] %></td>
            <td><%= inventory['mdb_date'] %></td>
            <td><%= inventory['office_product_unit'] %></td>
            <td><%= inventory['office_product_date'] %></td>
            <td><%= inventory['tat_index'] %></td>
            <td><%= inventory['tat_blank_party'] %></td>
            <td><%= inventory['tat_collateral'] %></td>
            <td><%= inventory['tat_special'] %></td>
            <td><%= inventory['tat_tax_lien'] %></td>
            <td><%= inventory['tat_mdb'] %></td>
            <td><%= inventory['tat_office_product'] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>